// Optional overrides
<% unless @override.verbose_level.nil? %>
APT::Periodic::Verbose "<%= @override.verbose_level %>";
<% end %>
<% unless @override.dl_limit.nil? %>
Acquire::http::Dl-Limit "<%= @override.dl_limit %>";
<% end %>
<% unless @override.random_sleep.nil? %>
APT::Periodic::RandomSleep "<%= @override.random_sleep %>";
<% end %>

// Specific options
Unattended-Upgrade::Allowed-Origins {
  <% @config.allowed_origins.each do |origin| %>
  <%= "\"#{origin}\";" %>
  <% end %>
};


Unattended-Upgrade::Package-Blacklist {
  <% @config.package_blacklist.each do |package| %>
  <%= "\"#{package}\";" %>
  <% end %>
};

Unattended-Upgrade::AutoFixInterruptedDpkg "<%= @config.auto_fix_interrupted_dpkg.to_s %>";
Unattended-Upgrade::MinimalSteps "<%= @config.minimal_steps.to_s %>";
Unattended-Upgrade::InstallOnShutdown "<%= @config.install_on_shutdown.to_s %>";
Unattended-Upgrade::Remove-Unused-Dependencies "<%= @config.remove_unused_dependencies.to_s %>";

Unattended-Upgrade::Automatic-Reboot "<%= @config.automatic_reboot.to_s %>";
Unattended-Upgrade::Automatic-Reboot-Time "<%= @config.automatic_reboot_time %>";

Unattended-Upgrade::MailOnlyOnError "<%= @config.mail_only_on_error.to_s  %>";
Unattended-Upgrade::Mail "<%= @config.mail_address %>";
